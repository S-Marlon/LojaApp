<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LojaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LojaApp"
    xmlns:servicos="clr-namespace:LojaApp.Views.Servicos"
    FlyoutWidth="300"
    Shell.FlyoutBehavior="Locked"
    Title="LojaApp">


    <Shell.FlyoutHeader>
        <Grid HeightRequest="60" BackgroundColor="Crimson">
            
            <Label Text="Ícones" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.FlyoutHeader>

    <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage"
     Icon="dotnet_bot.png"
      />


    <ShellContent
    Title="🧾 [Nova Venda]"
    ContentTemplate="{DataTemplate servicos:CadastrarServico}"
    Route="MainPage"
 Icon="dotnet_bot.png"
    />

    <ShellContent
    Title="🧾 [Relatórios]"
    ContentTemplate="{DataTemplate servicos:CadastrarServico}"
    Route="MainPage"
 Icon="dotnet_bot.png"
/>

    <ShellContent
    Title="🧾 [Gerenciar Estoque]"
    ContentTemplate="{DataTemplate servicos:CadastrarServico}"
    Route="MainPage"
 Icon="dotnet_bot.png"
/>

    <ShellContent
    Title="🧾 [Cadastrar Serviço]"
    ContentTemplate="{DataTemplate servicos:CadastrarServico}"
    Route="MainPage"
 Icon="dotnet_bot.png"
/>

    <ShellContent
    Title="🧾 [Historico de Venda]"
    ContentTemplate="{DataTemplate servicos:CadastrarServico}"
    Route="MainPage"
 Icon="dotnet_bot.png"
/>

    <FlyoutItem Title="Dogs"
               >
        <Tab>
            <ShellContent Title="Dog
                          "/>
        </Tab>
    </FlyoutItem>

    <MenuItem Text="Help"
             
              />


    <Shell.FlyoutFooter>

        <StackLayout>
            
            <Button Text="Usuario" />
            <Button Text="Configurações" />
            
        </StackLayout>

    </Shell.FlyoutFooter>
    

</Shell>
