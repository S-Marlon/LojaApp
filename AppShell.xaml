<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LojaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LojaApp"
    Shell.FlyoutBehavior="Flyout"
    Title="LojaApp">

    

    <ShellContent
     Title="Home"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Informações do Cliente"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Produtos e Atalhos de Venda"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Informações da Venda Atual"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

    <ShellContent
     Title="Funções Administrativas/Utilitários"
     ContentTemplate="{DataTemplate local:MainPage}"
     Route="MainPage" />

</Shell>
