                        </CollectionView>
                    </Frame>

            </VerticalStackLayout> -->

                    <!-- Linha 4: Observações -->

                    <VerticalStackLayout Grid.Column="2" Spacing="10">

                        <Label Text="Observações"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="Start"/>

                        <Editor Placeholder="Observações"
                BackgroundColor="#2C2C2C" TextColor="White"
                HeightRequest="100"/>

                    </VerticalStackLayout>

                    <!-- Linha 5: Código + Botão -->
                    <VerticalStackLayout Grid.Column="3" Spacing="10">
                        <Label Text="Informações adcionais"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Start"/>

                        <Label Text="Data e Hora"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>

                        <Label Text="Método de Pagamento"
                            TextColor="White"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Start"/>

                        <Grid  ColumnSpacing="10" RowSpacing="20" ColumnDefinitions="*,*"  RowDefinitions="*,*">


                            <Entry Placeholder="Limpar Campis" Grid.Column="0" Grid.Row="0"
                         BackgroundColor="#2C2C2C" TextColor="White" 
                         HorizontalOptions="FillAndExpand" />

                            <Entry Placeholder="Buscar" Grid.Column="1" Grid.Row="0"
                          BackgroundColor="#2C2C2C" TextColor="White"/>





                        </Grid>
                    </VerticalStackLayout>

                </Grid>


                <!-- 📋 COLUNA LATERAL - OUTROS SERVIÇOS -->
                <VerticalStackLayout Grid.Row="1"  Spacing="15" Background="gray"
                      
                     Margin="0,0,0,0">
                   

                    

                    

                    <Grid  ColumnSpacing="0" RowDefinitions="*">
                       
                        <Frame
                        CornerRadius="10"
                        Padding="10"
                        BackgroundColor="#2C2C2C"
                        BorderColor="#3D3D3D"
                        HasShadow="True"
                        Margin="10">

                            

                            <StackLayout Spacing="10">

                                <!-- Cabeçalho com número do pedido e nome -->
                                <Grid ColumnSpacing="10" ColumnDefinitions="*,*,*,*,*,*,*,*,*" >

                                    <StackLayout Grid.Column="0" VerticalOptions="Center" Spacing="3">
                                        <Label Text="□□□□□□□□□□□" FontSize="16" TextColor="White" />
                                        
                                    </StackLayout>

                                    <StackLayout Grid.Column="1" VerticalOptions="Center" Spacing="3">
                                        <Label Text="Mangueira Hidraulica" FontSize="16" TextColor="White" />
                                    </StackLayout>
                                    
                                    <StackLayout Grid.Column="2" VerticalOptions="Center" Spacing="3">
                                        <Image Source="dotnet_bot.png"></Image>
                                    </StackLayout>
                                    
                                    <StackLayout Grid.Column="3" VerticalOptions="Center" Spacing="3">
                                        <Label Text="Categoria" FontSize="12" TextColor="LightGray" />
                                        <Label Text="mg-Hidraulica" FontSize="16" TextColor="White" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="4" VerticalOptions="Center" Spacing="3">
                                        <Label Text="|" FontSize="16" TextColor="White" />
                                        
                                    </StackLayout>

                                    <StackLayout Grid.Column="5" VerticalOptions="Center" Spacing="3">
                                        <Label Text="Status" FontSize="12" TextColor="LightGray" />
                                        <Label Text="Em Estoque" FontSize="16" TextColor="White" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="6" VerticalOptions="Center" Spacing="3">
                                        <Label Text="Preço de Venda" FontSize="12" TextColor="LightGray" />
                                        <Label Text="R$25,12" FontSize="16" TextColor="White" />
                                        <Label Text="(Por metro)" FontSize="12" TextColor="LightGray" />

                                    </StackLayout>

                                    <StackLayout Grid.Column="7" VerticalOptions="Center" Spacing="3">
                                        <Label Text="✏️" FontSize="16" TextColor="White" />
                                    </StackLayout>

                                    <StackLayout Grid.Column="8" VerticalOptions="Center" Spacing="3">
                                        <Label Text="🗑️" FontSize="16" TextColor="White" />
                                        
                                    </StackLayout>

                                    

                                    


                                </Grid>

                                

                            </StackLayout>
                        </Frame>

                    </Grid>

                </VerticalStackLayout>
            </Grid>



        </VerticalStackLayout>
    </ScrollView>

</ContentView>
