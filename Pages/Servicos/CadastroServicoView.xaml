<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LojaApp.Pages.Servicos.CadastroServicoView">
    <ScrollView>
        <VerticalStackLayout
    Padding="10,20" Spacing="15"
            >

          
            <HorizontalStackLayout  HorizontalOptions="End">

            <Button Text="✎ Criar nova ordem de serviço"
            BackgroundColor="DarkRed"
            TextColor="White"/>

            

            </HorizontalStackLayout>


            <Grid Padding="10" ColumnSpacing="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="8*" />
                </Grid.ColumnDefinitions>

                <!-- 🧾 FORMULÁRIO PRINCIPAL -->
            <Grid Grid.Column="0"  BackgroundColor="#1C1C1C" Padding="10" RowSpacing="15" >
             
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Linha 1: Nome + CPF -->

                <VerticalStackLayout  Grid.Row="0" Spacing="10">

                    <Label
                     Text="Procurar por ordem de Serviço"
                     HorizontalOptions="Start"
                     Style="{StaticResource Headline}"
                     SemanticProperties.HeadingLevel="Level1" />

                    <Label Text="Dados do Cliente"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>
                    <Grid  ColumnSpacing="10" RowSpacing="20" ColumnDefinitions="*,*"  RowDefinitions="*,*">


                        <Entry Placeholder="Nome Cliente" Grid.Column="0" Grid.Row="0"
                               BackgroundColor="#2C2C2C" TextColor="White" 
                               HorizontalOptions="FillAndExpand" />

                        <Entry Placeholder="CPF Cliente" Grid.Column="1" Grid.Row="0"
                               BackgroundColor="#2C2C2C" TextColor="White"/>

                        <Entry Placeholder="Email" Grid.Column="0" Grid.Row="1"
                                BackgroundColor="#2C2C2C" TextColor="White" 
                                HorizontalOptions="FillAndExpand" />

                        <Entry Placeholder="Telefone" Grid.Column="1" Grid.Row="1"
                                BackgroundColor="#2C2C2C" TextColor="White"/>


                    </Grid>
                </VerticalStackLayout>
                <!-- Linha 2: Tipo Serviço -->
                <VerticalStackLayout Grid.Row="1" Spacing="10">
                    <Label Text="Dados do Serviço"
                                 TextColor="White"
                                 FontSize="18"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Start"/>

                    <Grid  ColumnSpacing="10" RowSpacing="20" ColumnDefinitions="*,*"  RowDefinitions="*,*">


                        <Entry Placeholder="Numero de ordem de serviço" Grid.Column="0" Grid.Row="0"
                                BackgroundColor="#2C2C2C" TextColor="White" 
                                HorizontalOptions="FillAndExpand" />

                        <Entry Placeholder="Status do seviço" Grid.Column="1" Grid.Row="0"
                                BackgroundColor="#2C2C2C" TextColor="White"/>

                    </Grid>
                    <Entry Placeholder="Tipo de Serviço" Grid.Column="1" Grid.Row="1"
                               BackgroundColor="#2C2C2C" TextColor="White"/>
                    <Entry Placeholder="Descrição do problema" Grid.Column="1" Grid.Row="1"
                                 BackgroundColor="#2C2C2C" TextColor="White"/>
                </VerticalStackLayout>

                <!-- Linha 3: Materiais + Pesquisa -->
                <!--  <VerticalStackLayout Grid.Row="2" Spacing="10">

                        <Label Text="Outros Serviços Realizados"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>

                        <Frame BackgroundColor="#2A2A2A" CornerRadius="10" Padding="5">
                            <CollectionView ItemsSource="{Binding Material}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame BackgroundColor="#3A3A3A" CornerRadius="5" Padding="10" Margin="5">
                                            <HorizontalStackLayout Spacing="55">
                                                <Label Text="Numero" TextColor="White" FontAttributes="Bold"/>

                                                <Label Text="{Binding Produto}" TextColor="White" FontAttributes="Bold"/>

                                                <Label Text="Quantidade:" TextColor="LightGray"  FontSize="10"/>
                                                <Label Text="{Binding Quantidade}" TextColor="LightGray"  FontSize="10"/>

                                                <Label Text="ValorUnitario:" TextColor="LightGray"  FontSize="10"/>
                                                <Label Text="{Binding ValorUnitario}" TextColor="Gray" FontSize="10"/>


                                                <Label Text="ValorTotal:" TextColor="LightGray"  FontSize="10"/>
                                                <Label Text="{Binding ValorTotal}" TextColor="Gray" FontSize="10"/>



                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>

                </VerticalStackLayout> -->

                <!-- Linha 4: Observações -->

                <VerticalStackLayout Grid.Row="3" Spacing="10">

                    <Label Text="Observações"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>

                    <Editor Placeholder="Observações"
                    BackgroundColor="#2C2C2C" TextColor="White"
                    HeightRequest="100"/>

                </VerticalStackLayout>

                <!-- Linha 5: Código + Botão -->
                <VerticalStackLayout Grid.Row="4" Spacing="10">
                    <Label Text="Informações adcionais"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"/>

                    <Label Text="Data e Hora"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"/>

                    <Label Text="Método de Pagamento"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"/>

                        <Grid  ColumnSpacing="10" RowSpacing="20" ColumnDefinitions="*,*"  RowDefinitions="*,*">


                            <Entry Placeholder="Limpar Campis" Grid.Column="0" Grid.Row="0"
                             BackgroundColor="#2C2C2C" TextColor="White" 
                             HorizontalOptions="FillAndExpand" />

                            <Entry Placeholder="Buscar" Grid.Column="1" Grid.Row="0"
                              BackgroundColor="#2C2C2C" TextColor="White"/>





                        </Grid>
                    </VerticalStackLayout>

        </Grid>
            

                <!-- 📋 COLUNA LATERAL - OUTROS SERVIÇOS -->
                <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="15"
                          
                         Margin="0,0,0,0">
                    <Label
                          Text="Ultimas ordem de Serviço"
                          HorizontalOptions="Start"
                          Style="{StaticResource Headline}"
                          SemanticProperties.HeadingLevel="Level1" />

                    <Grid  ColumnSpacing="0" ColumnDefinitions="*,*,*,*,*,*,*"  RowDefinitions="*">


                        <Label
                           Text="Todos"  Grid.Column="0"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Em Andamento"  Grid.Column="1"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Completo "  Grid.Column="2"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Cancelado"  Grid.Column="3"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Em Analise"  Grid.Column="4"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Aguardando Peças"  Grid.Column="5"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Pronto para Retirada"  Grid.Column="6"
                           HorizontalOptions="Center" VerticalOptions="Center"/>



                    </Grid>

                    <Grid  ColumnSpacing="0" ColumnDefinitions="*,*,*,*,*,*,*"  RowDefinitions="*">


                        <Label
        Text="Todos"  Grid.Column="0"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Utima hora"  Grid.Column="1"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Hoje"  Grid.Column="2"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Ontem"  Grid.Column="3"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Essa semana"  Grid.Column="4"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Esse mes"  Grid.Column="5"
        HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
        Text="Mes passado"  Grid.Column="6"
        HorizontalOptions="Center" VerticalOptions="Center"/>



                    </Grid>

                    <Grid  ColumnSpacing="0" ColumnDefinitions="*,*,*"  RowDefinitions="*">

                        <Frame Grid.Column="0"
    CornerRadius="10"
    Padding="10"
    BackgroundColor="#2C2C2C"
    BorderColor="#3D3D3D"
    HasShadow="True"
    Margin="10">

                            <StackLayout Spacing="10">

                                <!-- Cabeçalho com número do pedido e nome -->
                                <Grid ColumnSpacing="10" ColumnDefinitions="60,*" >
                                    <Frame BackgroundColor="DarkRed" Padding="5" CornerRadius="8" >
                                        <Label Text=" 01" FontSize="20" TextColor="White" />
                                    </Frame>

                                    <StackLayout Grid.Column="2" VerticalOptions="Center" Spacing="3">
                                        <Label Text="Watson Joyce" FontSize="16" TextColor="White" />
                                        <Label Text="Ordem #2345" FontSize="12" TextColor="LightGray" />
                                    </StackLayout>


                                </Grid>

                                <!-- Cabeçalho com número do pedido e nome -->
                                <Grid ColumnSpacing="10" ColumnDefinitions="*,*" >


                                    <StackLayout Grid.Column="0" VerticalOptions="Center" Spacing="0" HorizontalOptions="StartAndExpand">

                                        <Label Text="Quarta-feira, 28/07/2024" TextColor="White" FontSize="12" />
                                        <Label Text="16:48" Grid.Column="1" TextColor="White" FontSize="12"/>

                                    </StackLayout>

                                    <StackLayout Grid.Column="1" HorizontalOptions="End" Spacing="3">

                                        
                                        <Frame VerticalOptions="CenterAndExpand"
                                        BackgroundColor="Transparent"
                                        BorderColor="LightGreen"
                                        Padding="5"
                                        CornerRadius="10"
                                        HorizontalOptions="Start"
                                        >
                                            <Label Text="✓ Completo" TextColor="LightGreen" FontSize="12"/>
                                        </Frame>
                                        
                                        
                                    </StackLayout>


                                </Grid>



                                <!-- Data e Hora -->

                                <Frame BackgroundColor="DimGray" >
                                    <VerticalStackLayout  Padding="0,-10,0,0" Spacing="0">
                                <!-- Lista de Itens -->
                                        <Grid ColumnDefinitions="40,*,Auto" Margin="-15,0,-15,0" >
                                    <Label Text="Qtd" TextColor="Black" FontAttributes="Bold"  Grid.Column="0"/>
                                            <Label Text="Items" TextColor="Black" FontAttributes="Bold"  Grid.Column="1"/>
                                            <Label Text="Price" TextColor="Black" FontAttributes="Bold"  Grid.Column="2"/>
                                </Grid>

                                <!-- Exemplo de item -->
                                        <Grid ColumnDefinitions="40,*,Auto"  Margin="-15,0,-15,0">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                        <Grid ColumnDefinitions="40,*,Auto"  Margin="-15,0,-15,0">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                        <Grid ColumnDefinitions="40,*,Auto"  Margin="-15,0,-15,0">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                
                                    </VerticalStackLayout>
                                </Frame>

                                <!-- Subtotal -->
                                <Grid ColumnDefinitions="Auto,*" Margin="0,5,0,0">
                                    <Label Text="SubTotal" TextColor="Gray"/>
                                    <Label Text="$649" Grid.Column="1" TextColor="White" HorizontalOptions="End"/>
                                </Grid>
                                <Label Text="Responsável: fulano de tal" TextColor="White" FontSize="12" HorizontalOptions="Center"/>

                                <!-- Botões -->
                                <Grid ColumnDefinitions="*,*" Margin="0,0,0,0" ColumnSpacing="10">
                                    <Button Text="✎ Alterar"
                                            BackgroundColor="DarkRed"
                                            TextColor="White"/>
                                    
                                    <Button Text="Ver Ordem"
                                            Grid.Column="1"
                                            BackgroundColor="Tomato"
                                            TextColor="Black"
                                            CornerRadius="10"
                                            HorizontalOptions="Fill"
                                            />              
                                </Grid>

                            </StackLayout>
                        </Frame>

                    </Grid>

                </VerticalStackLayout>
            </Grid>

            

        </VerticalStackLayout>
        </ScrollView>
</ContentView>
