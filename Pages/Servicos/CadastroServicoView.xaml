                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Frame>

                </VerticalStackLayout> -->

                <!-- Linha 4: Observações -->

                <VerticalStackLayout Grid.Row="3" Spacing="10">

                    <Label Text="Observações"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"/>

                    <Editor Placeholder="Observações"
                    BackgroundColor="#2C2C2C" TextColor="White"
                    HeightRequest="100"/>

                </VerticalStackLayout>

                <!-- Linha 5: Código + Botão -->
                <VerticalStackLayout Grid.Row="4" Spacing="10">
                    <Label Text="Informações adcionais"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"/>

                    <Label Text="Data e Hora"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"/>

                    <Label Text="Método de Pagamento"
                                TextColor="White"
                                FontSize="18"
                                FontAttributes="Bold"
                                HorizontalOptions="Start"/>

                        <Grid  ColumnSpacing="10" RowSpacing="20" ColumnDefinitions="*,*"  RowDefinitions="*,*">


                            <Entry Placeholder="Limpar Campis" Grid.Column="0" Grid.Row="0"
                             BackgroundColor="#2C2C2C" TextColor="White" 
                             HorizontalOptions="FillAndExpand" />

                            <Entry Placeholder="Buscar" Grid.Column="1" Grid.Row="0"
                              BackgroundColor="#2C2C2C" TextColor="White"/>





                        </Grid>
                    </VerticalStackLayout>

        </Grid>
            

                <!-- 📋 COLUNA LATERAL - OUTROS SERVIÇOS -->
                <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="15"
                          
                         Margin="0,0,0,0">
                    <Label
                          Text="Ultimas ordem de Serviço"
                          HorizontalOptions="Start"
                          Style="{StaticResource Headline}"
                          SemanticProperties.HeadingLevel="Level1" />

                    <Grid  ColumnSpacing="0" ColumnDefinitions="*,*,*,*,*,*,*"  RowDefinitions="*">


                        <Label
                           Text="Todos"  Grid.Column="0"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Em Andamento"  Grid.Column="1"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Completo "  Grid.Column="2"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Cancelado"  Grid.Column="3"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Em Analise"  Grid.Column="4"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Aguardando Peças"  Grid.Column="5"
                           HorizontalOptions="Center" VerticalOptions="Center"/>

                        <Label
                           Text="Pronto para Retirada"  Grid.Column="6"
                           HorizontalOptions="Center" VerticalOptions="Center"/>



                    </Grid>

                    <Grid  ColumnSpacing="0" ColumnDefinitions="*,*,*"  RowDefinitions="*">

                        <Frame Grid.Column="0"
    CornerRadius="10"
    Padding="10"
    BackgroundColor="#2C2C2C"
    BorderColor="#3D3D3D"
    HasShadow="True"
    Margin="10">

                            <StackLayout Spacing="10">

                                <!-- Cabeçalho com número do pedido e nome -->
                                <Grid ColumnSpacing="10" ColumnDefinitions="*,*,*">
                                    <Frame BackgroundColor="#FFB6C1" Padding="5" CornerRadius="10">
                                        <Label Text="01" FontSize="20" TextColor="Black" />
                                    </Frame>

                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="Watson Joyce" FontSize="16" TextColor="White" />
                                        <Label Text="Ordem #2345" FontSize="12" TextColor="LightGray" />
                                    </StackLayout>

                                    <Frame Grid.Column="2"
                                   BackgroundColor="Transparent"
                                   BorderColor="LightGreen"
                                   Padding="5"
                                   CornerRadius="10"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center">
                                        <Label Text="✓ Completo" TextColor="LightGreen" FontSize="12"/>
                                    </Frame>
                                </Grid>

                                <!-- Data e Hora -->
                                <Grid ColumnDefinitions="*,Auto" Margin="0,5,0,0">
                                    <Label Text="Quarta, 28, 2024" TextColor="White" FontSize="12" />
                                    <Label Text="16:48" Grid.Column="1" TextColor="White" FontSize="12"/>
                                </Grid>

                                <!-- Lista de Itens -->
                                <Grid ColumnDefinitions="40,*,Auto" Margin="0,10,0,0">
                                    <Label Text="Qtd" TextColor="Gray" FontAttributes="Bold"  Grid.Column="0"/>
                                    <Label Text="Items" TextColor="Gray" FontAttributes="Bold"  Grid.Column="1"/>
                                    <Label Text="Price" TextColor="Gray" FontAttributes="Bold"  Grid.Column="2"/>
                                </Grid>

                                <!-- Exemplo de item -->
                                <Grid ColumnDefinitions="40,*,Auto">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                <Grid ColumnDefinitions="40,*,Auto">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                <Grid ColumnDefinitions="40,*,Auto">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>
                                <Grid ColumnDefinitions="40,*,Auto">
                                    <Label Text="01" TextColor="White"  Grid.Column="0"/>
                                    <Label Text="Scrambled eggs..." TextColor="White"  Grid.Column="1"/>
                                    <Label Text="$199" TextColor="White"  Grid.Column="2"/>
                                </Grid>


                                <!-- Subtotal -->
                                <Grid ColumnDefinitions="Auto,*" Margin="0,10,0,0">
                                    <Label Text="SubTotal" TextColor="Gray"/>
                                    <Label Text="$649" Grid.Column="1" TextColor="White" HorizontalOptions="End"/>
                                </Grid>
                                <Label Text="Responsável: fulano de tal" TextColor="White" FontSize="12"/>

                                <!-- Botões -->
                                <Grid ColumnDefinitions="Auto,*" Margin="0,10,0,0">
                                    <Button Text="✎"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BackgroundColor="Black"
                    TextColor="White"/>
                                    <Button Text="Pay Bill"
                    Grid.Column="1"
                    BackgroundColor="#FFB6C1"
                    TextColor="Black"
                    CornerRadius="10"
                    HorizontalOptions="Fill"
                    />
                                </Grid>

                            </StackLayout>
                        </Frame>

                    </Grid>

                </VerticalStackLayout>
            </Grid>

            

        </VerticalStackLayout>
        </ScrollView>
</ContentView>
